@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
    var fullname = Context.Session.GetString("fullname");
}
@section Styles {
    <link rel="stylesheet" href="~/css/index.css" />
}

<section id="welcome-video">
    <video autoplay muted loop playsinline class="bg-video">
        <source src="~/Image/vid.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="video-overlay">
        @if (!string.IsNullOrEmpty(fullname))
        {
            <h2 class="user-greeting">Hello, @fullname 👋</h2>
        }

        <h2>Welcome to TripSphere</h2>
        <p>Your personal travel planner for both domestic and international adventures!</p>
    </div>
</section>

<section id="gallery">
    <h2>Popular Destinations</h2>
    <div class="gallery-grid">
        <div class="gallery-item">
            <a asp-controller="Recommend" asp-action="Places" asp-route-destination="Australia">
